<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>jaar van uitgave</th>
    <% @base_sheet.base_series.get_metadata_fields.each do |field| %>
    <th><%= field %></th>
    <% end %>
    <th>Exemplaren</th>
  </tr>
  </thead>

  <tbody>
  <% @metadata.each do |m| %>
    <tr>
      <td>
        <%= m.sheet.pubdate_exact ? '' : '[' %><%= m.sheet.pubdate.year %><%= m.sheet.pubdate_exact ? '' : ']' %>

      </td>
      <% @base_sheet.base_series.metadata_fields.each do |field| %>
        <td><%= m[field] %></td>
      <% end %>
      <td><%= link_to m.sheet.copies.count, sheet_copies_path(m.sheet) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

